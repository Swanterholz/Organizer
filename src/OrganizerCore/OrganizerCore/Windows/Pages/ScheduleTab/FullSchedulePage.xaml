<Page x:Class="OrganizerCore.Windows.Pages.ScheduleTab.FullSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OrganizerCore.Windows.Pages.ScheduleTab"
      mc:Ignorable="d"
      d:DesignWidth="1293" d:DesignHeight="560"
      Title="FullSchedulePage"
Loaded="FullSchedulePage_OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*" />
            <ColumnDefinition Width="313*" />
            <ColumnDefinition Width="314*" />
            <ColumnDefinition Width="292*" />
            <ColumnDefinition Width="291*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55.2" />
            <RowDefinition Height="43.2" />
            <RowDefinition Height="31.2" />
            <RowDefinition Height="*" />
            <RowDefinition Height="62" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="5,15,5,0">
                <Label Content="Фамилия ученика:"
                       FontSize="18" FontFamily="Segoe UI Light" Width="153" />
                <TextBox
                    x:Name="SearchStudentTextBox"
                    Height="30"
                    Text=""
                    Width="227"
                    FontSize="18" FontFamily="Segoe UI Light"
                    Margin="5,0,0,0" />
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="2">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="5,15,5,0">
                <Label Content="Группа:"
                       FontSize="18" FontFamily="Segoe UI Light" />
                <TextBox
                    x:Name="SearchGroupTextBox"
                    Height="30"
                    Width="225"
                    FontSize="18" FontFamily="Segoe UI Light"
                    Margin="5,0,0,0" />
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="5,15,5,0">
                <Label Content="Дата с:"
                       FontSize="18" FontFamily="Segoe UI Light" />
                <DatePicker
                    x:Name="SearchFromDateTPicker"
                    FontSize="18" FontFamily="Segoe UI Light"
                    Width="195" Margin="13,0,0,0" />
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="4">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="5,10,5,0">
                <CheckBox 
                    x:Name="ShowHeldCheckBox"
                    Content="Проведено"
                          FontSize="18" FontFamily="Segoe UI Light"
                          Width="123" Height="22" />
                <CheckBox 
                    x:Name="ShowNotHeldCheckBox"
                    Content="Не проведено"
                          FontSize="18" FontFamily="Segoe UI Light"
                          Width="153" Height="26" />
            </StackPanel>
        </Border>
        <Border Grid.Column="3" Grid.Row="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="5,0,0,0">
                <Label Content="Дата по:"
                       FontSize="18" FontFamily="Segoe UI Light"
                       Height="37" Width="82" />
                <DatePicker
                    x:Name="SearchToDatePicker"
                    FontSize="18" FontFamily="Segoe UI Light"
                            Width="190" Height="34" />
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="5,5,5,0">
                <CheckBox 
                    x:Name="IsTodayCheckBox"
                    Content="Сегодня"
                          FontSize="18" FontFamily="Segoe UI Light"
                          Width="123" Height="26" />
                <CheckBox 
                    x:Name="ApplyDatesFilterCheckBox"
                    Content="Применить"
                          FontSize="18" FontFamily="Segoe UI Light"
                          Width="123" Height="26" />
            </StackPanel>
        </Border>
        <Border Grid.Row="3" Grid.ColumnSpan="5">
            <StackPanel HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Horizontal"
                        Margin="5">
                <DataGrid 
                    x:Name="ScheduleViewDataGrid"
                    Width="1283" />
            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Width="40" Height="40"
                        Style="{DynamicResource PurpleButton}"
                        Click="UploadButton_OnClick">
                    <!-- <Image Height="30" Source="выгрузить.ico" Stretch="Fill" Width="30"/> -->
                </Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="3">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Проведено"
                        Width="250" Height="31"
                        Style="{DynamicResource PurpleButton}"
                        Click="HeldButton_OnClick"/>

            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="4">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Добавить занятие"
                        Width="250" Height="31"
                        Style="{DynamicResource PurpleButton}"
                        Click="ScheduleLessonButton_OnClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>